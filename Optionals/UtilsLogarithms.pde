float log10 (float x) 
// Calculates the base-10 logarithm of a number
{
  return (log(x) / log(10));
}

float log2 (float x) 
// Calculates the base-2 logarithm of a number
{
  return (log(x) / log(2));
}


double log2 (double x) 
{
  return (Math.log(x) / Math.log(2));
}

double log10 (double x) 
{
  return (Math.log(x) / Math.log(10));
}

